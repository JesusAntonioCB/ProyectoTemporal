{% if chartbeatId %}
	<figure class="op-tracker">
		<iframe>
			<script type='text/javascript'>
		    	var _sf_async_config = {};
		        _sf_async_config.uid = {{chartbeatId}};
		        _sf_async_config.domain = '{{chartbeatDomain}}';
		        _sf_async_config.title = "{{ content.publishedVersion.title }}";
				{% set section = "Noticias" %}
				{% if content.section != null %}
					{% set section = content.section.name %}
				{% elseif content.cartoon != null %}
					{% if content.cartoon.section != null %}
						{% set section = content.cartoon.section.name %}
					{% endif %}
				{% elseif content.blog != null %}
					{% if content.blog.section != null %}
						{% set section = content.blog.section.name %}
					{% endif %}
				{% endif %}
				_sf_async_config.sections = "{{section}}";
				_sf_async_config.authors = "{{ signature }}";
		        _sf_async_config.useCanonical = true;
		        window._sf_endpt = (new Date()).getTime();
		    </script>
		    <script defer src="https://static.chartbeat.com/js/chartbeat_fia.js"></script>
	    </iframe>
	</figure>
{% endif %}
