{% if module.template == 'news' %}
  <div class="lo-news">
    <div class="media-container">
      <div class="item">
        <div class="hour">
          <span>{{ module.publishedHour }}</span>
        </div>

      </div>
      <div class="holder">
        <h2 class="title" >
          <a {{ module.slug|linkConstruct|raw }}>{{ module.title }}</a>
        </h2>
        <div class="summary-container">
          <span >{{ module.abstract|charsDecode|striptags }}</span>
        </div>
        <div class="news-img-container">
          <div class="img-container">
            <a {{ module.slug|linkConstruct|raw }}>
              {{ module.thumbnail|asImage(module.alt)|raw }}
            </a>
          </div>
          <div class="news-preview-container">
            <div class="author">
              <span >{{ module.author }}</span>
            </div>
            {{ module.slug|socialTag(module.title, module.thumbnail)|raw }}
            <!-- <div class="social-media"></div> -->
            <div class="note">
              <div class="hint">{{ module.abstract|charsDecode|striptags }}</div>
              <a {{ module.slug|linkConstruct|raw }}>LEER MÁS</a>
            </div>
            <!-- {{ module.slug|socialTag(module.title, module.thumbnail)|raw }}
            <div class="social-media"></div> -->
          </div>
        </div>
      </div>
    </div>
  </div>
{% elseif module.template == 'video' or module.template == 'composed' %}
  <div class="news-container">
    <div class="holder-container" data-provider="{{ father.provider }}" data-reference="{{ father.providerReference }}" preload="true">
      {{ father.thumbnail|asImage(module.alt)|raw }}
      <button type="button" class="btn-play" >
        <span class="fa fa-play"></span>
      </button>
    </div>
    <div class="headline-top">
      <div class="title">
        <a href="{{ father.slug }}">
          {% set abstract = (father.abstract == "") ? "" : father.abstract %}
          <span  >{{ abstract|raw }}</span>
        </a>
      </div>
      <div class="abstract">
        {% set body = (father.body == "") ? "" : father.body %}
        <span  >{{ body }}</span>
      </div>
    </div>
    <div class="social-networks-share">
      <div class="span-share">
        <span>Compartir</span>
      </div>
      {% set slugUrl = app.request.requestUri %}
      {{ slugUrl|socialTag(father.title, father.thumbnail)|raw }}
      <div class="social-media-large"></div>
    </div>
  </div>
{% elseif module.template == 'blog' %}
  <div class="lo-blog">
    <div class="description">
      <span  >{{ module.abstract }}</span>
    </div>
    <div class="header-blog">
      <div class="icon">
        <img src="/bundles/camusassets/images/icon-milenio.png" alt="">
      </div>
      <div class="img-container">
        {{ module.thumbnail|asImage(module.alt)|raw }}
      </div>
      <div class="title-container">
        <div class="title" >{{ module.title }}</div>
        <div class="author" >{{ module.author }}</div>
      </div>
    </div>
  </div>
