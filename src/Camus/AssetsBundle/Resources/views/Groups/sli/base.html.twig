        <div class="title">
          <span  >{{ module.title }}</span>
        </div>
        <div class="arrows"   style="color: {{ module.color }}">
          <div class="left">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
          </div>
          <div class="right">
            <i class="fa fa-chevron-right" aria-hidden="true"></i>
          </div>
        </div>
      </div>
      <div  class="firms">
        {% for list in module.modules %}
          {% set type = list.type|splitTemplate %}
