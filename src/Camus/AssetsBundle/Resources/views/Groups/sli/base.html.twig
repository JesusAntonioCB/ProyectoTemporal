{% if module.template == 'opinion' %}
 {% if module.modules is defined and module.modules is not empty %}
   <div class="sli-opinion"   >
     <div class="media-container">
        <div class="headline" >
          {% if module.hasThumbnail == true %}
            <div class="img-container" >
              {{ module.thumbnail|asImage(module.alt)|raw }}
            </div>
          {% endif %}
          {% if module.title != '' %}
         <div class="title"  >
           <span >{{ module.title }}</span>
         </div>
         {% endif %}
         {% if module.hasSponsor is defined and module.hasSponsor == true %}
           {{ module.sponsor|asSponsor|raw }}
         {% endif %}
         <div class="arrows">
           <div class="left">
             <i class="fa fa-angle-left" aria-hidden="true"></i>
           </div>
           <div class="right">
             <i class="fa fa-angle-right" aria-hidden="true"></i>
           </div>
         </div>
       </div>
       <div  class="firms">
         {% for slide in module.modules %}
           {% set type = slide.type|splitTemplate %}
           {% include '@CamusAssets/Groups/'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: slide|getModelModule, parentId: module.id } %}
         {% endfor %}
       </div>
     </div>
   </div>
 {% endif %}
