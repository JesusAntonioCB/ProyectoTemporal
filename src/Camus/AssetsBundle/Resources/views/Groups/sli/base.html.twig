{% elseif module.template == 'left_title' %}
  {% if module.modules is defined and module.modules is not empty %}
    <div class="sli-base-left-title"   >
      <div class="media-container">
        <div class="headline">
          <h2 class="title" >{{ module.title }}</h2>
          {% if module.heading.media != '' %}
            {{ module.heading.media|asHost(module.author)|raw }}
          {% endif %}
          <div class="arrows">
            <div class="left">
              <i class="fa fa-angle-left" aria-hidden="true"></i>
            </div>
            <div class="right">
              <i class="fa fa-angle-right" aria-hidden="true"></i>
            </div>
          </div>
        </div>
        <div  class="firms">
          {% for list in module.modules %}
            {% if list != null %}
              {% set type = list.type|splitTemplate %}
              {% include '@CamusAssets/Groups/'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: list|getModelModule, parentId: module.id } %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
{% elseif module.template == 'large' %}
