        {% endfor %}
      </div>
    </div>
  </div>
{% elseif module.template == 'left_title_sortable'%}
  <div class="sli-left-title-sortable"  >
    <div class="head-container"  style="border-color: {{ module.color }}">
      <h1 class="headline"   style="color: {{ module.color }}">{{ module.title }}</h1>
      <div class="buttons-container">
        <div class="ctr-btn date-button">
          <span class="fa fa-calendar"></span>
          <span >Seleccionar Fecha</span>
        </div>
        <div class="ctr-btn sort-button">
          <span >A-Z Elegir Autor</span>
        </div>
        <div class="arrows">
          <div class="left">
            <i class="fa fa-play-circle" aria-hidden="true"></i>
          </div>
          <div class="right">
            <i class="fa fa-play-circle" aria-hidden="true"></i>
          </div>
        </div>
      </div>
    </div>
    <div  class="firms">
      {% for list in module.modules %}
        {% if list != null %}
          {% set type = list.type|splitTemplate %}
          {% include '@CamusAssets/Groups/'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: list|getModelModule, parentId: module.id } %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
