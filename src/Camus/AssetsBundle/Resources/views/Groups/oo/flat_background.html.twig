{% if module.template == 'base' %}
  <div class="oo-flat-background" {{ data_camus_toolbar_position["br"] }}>
    <div class="media-container-light-cyan" style="background-color: {{ module.color }}" {{ data_camus_background_color }}>
      {% if module.heading.title != '' %}
      <div class="head" {{ data_camus_removable["header"] }}>
        <span {{ data_camus_heading_title }}>{{ module.heading.title }}</span>
      </div>
      {% endif %}
      <div class="text">
        <div class="title">
          <a {{ module.slug|linkConstruct|raw }}>
            <span {{ data_camus_title }}>{{ module.title }}</span>
          </a>
        </div>
        {% if module.hasThumbnail == true %}
          <div class="img-container" {{ data_camus_removable["image"] }}>
            <a {{ module.slug|linkConstruct|raw }}>
              {{ module.thumbnail|asImage(module.alt)|raw }}
            </a>
          </div>
        {% endif %}
        <div class="abstract">
          <span {{ data_camus_abstract }}>{{ module.abstract|striptags('<b><u><i><br>')|raw }}</span>
        </div>
      </div>
      <div class="footer">
        <div class="author">
          <span {{ data_camus_author }}>{{ module.author }}</span>
        </div>
        {{ module.slug|socialTag(module.title, module.thumbnail)|raw }}
        <!-- <div class="social-media"></div> -->
      </div>
    </div>
  </div>
{% elseif module.template == 'base_large' %}
  <div class="oo-base-large" >
    <div class="media-container-light-cyan">
      {% if module.heading.title|length > 0 %}
      <div class="head" {{ data_camus_removable["header"] }}>
        <span {{ data_camus_heading_title }}>{{ module.heading.title }}</span>
      </div>
      {% endif %}
      {% if module.hasThumbnail == true %}
        <div class="image" {{ data_camus_removable["image"] }}>
          <a {{ module.slug|linkConstruct|raw }}>
            {{ module.thumbnail|asImage(module.alt)|raw }}
          </a>
        </div>
      {% endif %}
      <div class="text">
        <div class="title">
          <a {{ module.slug|linkConstruct|raw }}>
            <span {{ data_camus_title }}>{{ module.title }}</span>
          </a>
        </div>
        <div class="abstract">
          <span {{ data_camus_abstract }}>{{ module.abstract|raw }}</span>
        </div>
      </div>
      <div class="footer">
        <div class="author">
          <span {{ data_camus_author }}>{{ module.author }}</span>
        </div>
        {{ module.slug|socialTag(module.title, module.thumbnail)|raw }}
        <!-- <div class="social-media"></div> -->
      </div>
    </div>
  </div>
{% endif %}
