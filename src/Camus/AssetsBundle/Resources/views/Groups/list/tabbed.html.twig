  <div class="tabs-small" {{data_camus_allow_empty_module["1"]}}>
    <div class="title">
      <span >{{ module.title }}</span>
    </div>
    <div class="media-container">
      <div class="tabs">
        <ul>
          <li class="tab-name tab-title-active" id="tab-title-1">Leído</li>
          <li class="tab-name"id="tab-title-2">Comentado</li>
          <li class="tab-name" id="tab-title-3">Compartido</li>
        </ul>
      </div>
      <div class="content">
        <div  class="classification-tab tab-active tab-content">
          {# {% for slide in module.modules %}
            {% set type = slide.type|splitTemplate %}
