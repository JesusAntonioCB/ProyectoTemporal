{% elseif module.template == 'large' %}
<div class="tabs-large sports-stats" {{data_camus_allow_empty_module["1"]}}>
 <div class="media-container">
   <ul class="tabs">
     <li id="tab-title-1" class="tab-name tab-title-active">Puntuación</li>
     <li id="tab-title-2" class="tab-name">Resultados</li>
     <li id="tab-title-3" class="tab-name">Goleadores</li>
   </ul>
   <div class="content {{ module.type }}">
     <div id="tab-content-1" class="tab-content tab-active">
       <!--<div class="filter-date">
         <div class="edition-filter">
