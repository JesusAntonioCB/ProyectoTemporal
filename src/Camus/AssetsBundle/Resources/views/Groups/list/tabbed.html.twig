              <td>{{ team.equipo }}</td>
              <td>{{ team.pts }}</td>
              <td>{{ team.jg }}</td>
              <td>{{ team.je }}</td>
              <td>{{ team.jp }}</td>
              <td>{{ team.dif }}</td>
            </tr>
          {% endfor %}
