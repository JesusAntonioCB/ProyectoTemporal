{% elseif module.template == 'large_news' or module.template == 'large_news_photo' %}
  <div class="list-large-news" {{ data_camus_toolbar_position["tl"] }} {{ data_camus_module_type["list"] }} {{ data_camus_background_color }} data-camus-id="{{ module.id }}">
    <div class="news-container">
      {% if module.title != '' %}
        <div class="headline" {{ data_camus_removable["header"] }}>
          {% if module.template == 'large_news_photo' %}
            <h2 class="title" {{ data_camus_title }}>{{ module.title }}</h2>
          {% else %}
            <h1 class="title" {{ data_camus_title }}>{{ module.title }}</h1>
          {% endif %}
        </div>
      {% endif %}
      <div class="list-news-container">
        <div class="list" {{ data_camus_modules }}>
          {% for listElement in module.modules %}
            {% set type = listElement.type|splitTemplate %}
            {% include 'Application\Camus\AssetsBundle:Groups:'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: listElement|getModelModule} %}
          {% endfor %}
        </div>
          {{ include ('Application\Camus\AssetsBundle:Groups:list/pagination.html.twig', { 'paging': module.paging}) }}
      </div>
      </div>
  </div>
{% elseif module.template == "large_last_news" %}
  <div class="list-large-last-news" {{ data_camus_toolbar_position["tl"] }} {{ data_camus_module_type["list"] }} {{ data_camus_background_color }} data-camus-id="{{ module.id }}">
    <div class="news-container">
      {% set urlSection = "" %}
      {% if app.request.cookies.has("sectionLink") %}
        {% set urlSection = app.request.cookies.get("sectionLink") %}
      {% endif %}
      <div class="headline">
        {% if 'admin' not in app.request.getSchemeAndHttpHost() %}
          <span class="title">ÚLTIMA HORA</span>
          <div class="containerLastHour">
            <span class="chose-section">Elije sección:</span>
            <select id="selectLastHour" name="section" class="select-last-news">
              <option selected link="" value="-1">Todas</option>
              {{ render_esi(controller('ApplicationCamusFrontEndBundle:Default:sections', {sectionUrl : urlSection })) }}
            </select>
          </div>
        {% else %}
          <span>Última Hora</span>
        {% endif %}
      </div>
      <div class="list-news-container">
        <div class="list" {{ data_camus_modules }}>
          {% for listElement in module.modules %}
            {% set type = listElement.type|splitTemplate %}
            {% include 'Application\Camus\AssetsBundle:Groups:'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: listElement|getModelModule} %}
          {% endfor %}
        </div>
          {{ include ('Application\Camus\AssetsBundle:Groups:list/pagination.html.twig', { 'paging': module.paging, "isLastNews": "true" }) }}
      </div>
      </div>
  </div>
{% elseif module.template == 'large_news_linked' %}
