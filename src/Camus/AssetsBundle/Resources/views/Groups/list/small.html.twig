{% import "Application\Camus\AssetsBundle:Fixtures:see-more.html.twig" as seeMore %}

{% if module.template == 'base' or module.template == 'base_media' or module.template == 'base_opinions' %}
  {% if module.modules is defined and module.modules is not empty %}
    <div class="list-base" {{ data_camus_module_type["list"] }} data-camus-template="{{module.templateName}}" {{ data_camus_type["list_small"] }} {{ data_camus_toolbar_position["br"] }} data-camus-id="{{ module.id }}">
      <div class="media-container">
        {% if module.title != '' %}
          {% if module.template != 'base' %}
            {% set more = true %}
            {% set removable = false %}
          {% else %}
            {% set more = false %}
            {% set removable = true %}
          {% endif %}
          {{ seeMore.text(module, more, removable) }}
        {% endif %}
        <div class="list" {{ data_camus_modules }}>
          {% for listElement in module.modules %}
          {% set type = listElement.type|splitTemplate %}
          {% include 'Application\Camus\AssetsBundle:Groups:'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: listElement|getModelModule, index: loop.index} %}
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
{% elseif  module.template == 'small_hour' %}
  <div class="list-small-hour" {{ data_camus_module_type["list"] }} data-camus-id="{{ module.id }}">
    {{ seeMore.text(module, true, false) }}
    <div class="media-container" {{ data_camus_modules }}>
      {% for listElement in module.modules %}
        {% set type = listElement.type|splitTemplate %}
        {% include 'Application\Camus\AssetsBundle:Groups:'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: listElement|getModelModule} %}
      {% endfor %}
    </div>
  </div>
{% elseif  module.template == 'medium' %}
  <div class="list-medium" {{ data_camus_module_type["list"] }} data-camus-id="{{ module.id }}">
    {{ seeMore.text(module, true, false) }}
    <div class="media-container" {{ data_camus_modules }}>
      {% for listElement in module.modules %}
        {% set type = listElement.type|splitTemplate %}
        {% include 'Application\Camus\AssetsBundle:Groups:'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: listElement|getModelModule} %}
      {% endfor %}
    </div>
  </div>
