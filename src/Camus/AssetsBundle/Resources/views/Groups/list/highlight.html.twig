{% import "@CamusAssets/Fixtures/see-more.html.twig" as seeMore %}

{% if module.template == 'landscape' %}
  <div class="list-highlight-landscape" {{ data_camus_module_type["list"] }} data-camus-id="{{ module.id }}">
    {{ seeMore.text(module, true, false) }}
    <div class="media-container" {{ data_camus_modules }}>
      {% for listElement in module.modules %}
        {% set type = listElement.type|splitTemplate %}
        {% include '@CamusAssets/Groups/'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: listElement|getModelModule} %}
      {% endfor %}
    </div>
  </div>
{% elseif module.template == 'portrait' %}
  <div class="list-highlight-portrait" {{ data_camus_module_type["list"] }} data-camus-id="{{ module.id }}">
    {{ seeMore.text(module, true, false) }}
    <div class="media-container" {{ data_camus_modules }}>
      {% for listElement in module.modules %}
        {% set type = listElement.type|splitTemplate %}
        {% include '@CamusAssets/Groups/'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: listElement|getModelModule} %}
      {% endfor %}
    </div>
  </div>
{% endif %}
