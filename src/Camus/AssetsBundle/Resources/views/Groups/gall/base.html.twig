                  {% set i = i + 1 %}
                {% endfor %}
              </div>
            {% endif %}
            {% if module.extraHeading.folderInfo is defined and module.extraHeading.folderInfo is not empty %}
              <div class="folder-info">
                <div class="text gallery-info">
                  <span>
