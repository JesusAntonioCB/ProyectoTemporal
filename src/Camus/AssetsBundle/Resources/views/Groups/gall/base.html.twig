        {% endif %}
        {% if module.hasSponsor is defined and module.hasSponsor == true %}
          {{ module.sponsor|asSponsor|raw }}
        {% endif %}
        <div class="menu-control-gallery"></div>
      </div>
      <div class="selectable-info-conotainer"></div>
      <div  class="firms">
        {% for list in module.modules %}
          {% if list != null %}
            {% set type = list.type|splitTemplate %}
            {% include '@CamusAssets/Groups/'~type[0]~'/'~type[1]~'.html.twig' ignore missing with {module: list|getModelModule, parentId: module.id } %}
          {% endif %}
        {% endfor %}
        <div class="zoomImage hide"></div>
        <div class="zoomImage_layer hide"></div>
      </div>
    </div>
  </div>
{% endif %}
