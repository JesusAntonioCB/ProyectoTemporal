<div class="ad leaderboard" >
  {% set moduleId = (module.id != null) ? module.id : module.adId %}
  <div data-camus-module-ad-div="true" id="div-gpt-ad-head-{{ moduleId }}">
    <script>
    googletag.cmd.push(function() {
      var mapping = googletag.sizeMapping()
      .addSize([0, 0], [970, 250])
      .addSize([0, 0], [970, 90])
      .addSize([980, 0], [728, 90])
      .addSize([0, 0], [320, 100])
      .addSize([0, 0], [320, 50])
      .build();
      googletag.defineSlot('{{ module.adCode }}', [[970,250], [970,90], [728,90], [320, 100], [320, 50]], "div-gpt-ad-head-{{ moduleId }}")
      .defineSizeMapping(mapping)
      .setTargeting('AdType', ["{{ module.adTarget }}"])
      .setCollapseEmptyDiv(true)
      .addService(googletag.pubads());
      googletag.display("div-gpt-ad-head-{{ moduleId }}");
    });
    </script>
  </div>
</div>
