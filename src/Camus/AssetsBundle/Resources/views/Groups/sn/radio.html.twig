{% if module.template == 'base' %}
  <div class="sn-radio" data-camus-template="{{module.templateName}}"   style="background-color: {{ module.color }}">
    <div class="media-container">
      <div class="data">
        <div class="titulo">
          <span >{{ module.title }}</span>
        </div>
        <h5>
          <span class="section">{{ module.section }}</span>
        </h5>
        {{ module.slug|socialTag(module.title, module.thumbnail)|raw }}
        <!-- <div class="social-media"></div> -->
      </div>
      <div class="player">
        <div>
          <span class="date">12.10.2016</span>
           -
          <span class="duration">20 min.</span>
        </div>
        <div class="sphere" >
          <span class="fa fa-play"></span>
        </div>
      </div>
    </div>
  </div>
{% endif %}
