  </div>
{% endmacro %}

{% block GTM %}
  <script type="text/javascript">
    dataLayer = [{
      'varSeccion': '{{ title }}',
      'varSubSeccion': '',
      'varSubSubSeccion': '',
      'varPlaza': 'Nacional'
    }];
  </script>
  {{ parent() }}
{% endblock %}

